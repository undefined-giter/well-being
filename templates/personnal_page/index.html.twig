{% extends 'base.html.twig' %}

{% block title %}{{ pu.firstName }} {{ pu.lastName }} personnal page{% endblock %}

{% block stylesheet %}
<style>
p, button{margin-bottom: 0.7em}
</style>
{% endblock %}
{% block body %}
    <div class="flex justify-center">
        <div class="mx-8 w-2/3 text-orange-700">
            <h1 class="text-center text-orange-400 mb-4">ðŸŒ³Welcome to your personal page, {{ pu.firstName }}ðŸŒ³</h1>
            
            <p><span class='text-green-700'>Your first name: </span>{{ pu.firstName }}</p>
            <p><span class='text-green-700'>Your last name: </span>{{ pu.lastName }}</p>
            <p><span class='text-green-700'>Your email: </span>{{ pu.email }}</p>
            <p><span class='text-green-700'>Your description: </span>{{ pu.description }}</p>
            <p><span class='text-green-700'>Your specialization{% if pu.specialization|length > 1 %}s:</span>
                {% for spe in pu.specialization %}<br>Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â * {{ spe }}{% endfor %}
            {% else %}
            :</span>
                {{ pu.specialization[0] }}
            {% endif %}</p>
            <p><span class='text-green-700'>Your roles:</span>
                {% for role in pu.roles|slice(1) %}
                    {{ role }}Â 
                {% endfor %}
            </p>
            {% if pu.picture is defined %}
                <img src="{{ asset('profilesPictures/' ~ pu.picture) }}" alt="Your Profile Picture" style="height: 350px; border-radius: 50%;">
            {% else %}
                <p>No profile picture uploaded</p>
            {% endif %}
            <br>
            <p><span class='text-green-700'>Member since: </span>{{ pu.registrationDate|date('F Y') }}</p>
            <div class="text-right">
                
                {% if 'professional' in pu.roles and 'patient' not in pu.roles %}
                    {% set update_controller = 'professional_update' %}
                {% elseif 'patient' in pu.roles and 'professional' not in pu.roles %}
                    {% set update_controller = 'patient_update' %}
                {% else %}{# If user is patient and professional (not supposed to be something else or nor in here atm) #}
                    <a href="{{ path('{{ professional_update }}') }}" class="btn btn-danger text-slate-300">Modify your Professional profile</a>
                    {% set update_controller = 'patient_update' %}
                {% endif %}
                <a href="{{ path(update_controller) }}" class="btn btn-danger text-slate-300">Modify your profile</a>
            </div>
        </div>
    </div>
{% endblock %}