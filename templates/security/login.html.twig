{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

{% for flash_message in app.session.flashbag.get('info') %}
    <div class="alert alert-info mx-6">
        {{ flash_message }}
    </div>
{% endfor %}

{% for flashMessage in app.flashes('success') %}
    <div class="alert alert-success mt-2" data-duration="{{ flashMessage.duration }}">
        {{ flashMessage.message }}
    </div>
{% endfor %}

<form method="post" class="mx-3">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <p class="my-2">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}" class='text-orange-900'>Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ latestEmailRegistered }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </div>

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let flashMessages = document.querySelectorAll('.alert');
            flashMessages.forEach(function(message) {
                let duration = message.dataset.duration || 5000;
                setTimeout(function() {
                    message.style.display = 'none';
                }, duration);
            });
        });
    </script>
{% endblock %}